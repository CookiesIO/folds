{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "es5",
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "jsx": "react",

    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
