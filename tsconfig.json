{
  "compilerOptions": {
    "strict": true,
    "module": "ES2015",
    "target": "ES6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "jsx": "react",

    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "isolatedModules": false,

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "dist", "storybook-static"],
  "include": ["src"]
}
